<body>
<h1>Books</h1>
<table>
	<tr>
		<th>Title</th>
		<th>Body</th>
	</tr>
	<% @books.each do |book| %>
	<tr>
		<td><span><%= book.title %></span></td>
		<td><span><%= book.body %></span></td>
		<td><%=link_to 'Show' , "/books/#{book.id}" %></td>
		<td><%=link_to 'Edit' , "/books/#{book.id}/edit" %></td>
		<td><%= link_to 'destory', "/books/#{book.id}", method: :delete, "data-confirm" => "Are You Sure" %></td>
	</tr>
	<% end %>
</table>



<h2>New book</h2>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
 
    <p>Title</p>
    <%= f.text_field :title %>

    <p>Body</p>
    <%= f.text_area :body %>

    <p> </p>
    <%= f.submit 'Create Book' %>
 
<% end %>
</body>



