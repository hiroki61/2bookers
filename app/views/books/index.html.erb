<!-- Booksページ -->
<div class="container"> <!-- ここを追加 -->
	<div class="row">   <!-- ここを追加 -->
		<div class="col-lg-4">

			<%= render 'books/author', user: @user %>



			<%= render 'books/sauthor', book: @book %>
		</div>
			<div class="col-lg-8">
				<h1>Books</h1>
				<table class="table table-striped">
				<tr>
				<th>   </th>
				<th>Title</th>
				<th>Opinion</th>
				</tr>
				<% @books.each do |book| %>
					<tr>
					<td><span>
						<% if book.user.profile_image %>
    						<%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-circle pull-left profile-img" %>
    					<% else %>
    						<p><%= image_tag 'noimage.png', :width => '50', :height => '50' %></p>
						<% end %>
						<!-- ユーザーの画像からそのユーザーへ飛びたい。 -->
	<!-- <a href= user_path(user) target="_blank">
  <img src=book.userprofile_image>
  高度な検索
			 -->
					</span></td>
					<td><span><%=link_to book.title , "/books/#{book.id}" %></span></td>
					<td><span><%= book.body %></span></td>
					</tr>
				<% end %>
				</table>
			</div>
		</div>
	</div>
</div>







