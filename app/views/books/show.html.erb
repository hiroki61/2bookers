<!-- 本のタイトルクリックで飛べる詳細 -->
<div class="container"> <!-- ここを追加 -->
	<div class="row">   <!-- ここを追加 -->
		<div class="col-lg-4">

			<%= render 'books/author', user: @user %>

			<%= render 'books/sauthor', book: @bookf %>

		</div>
		<div class="col-lg-8">
			<h1>BookDetail</h1>
			<table class="table table-striped">
				<tr>
				<th>   </th>
				<th>   </th>
				<th>   </th>
				</tr>
				<tr>
				<td>

			<%= link_to user_path(@user) do %>
			<span>
				<% if @book.user.profile_image %>
    				<%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-circle pull-left profile-img" %>
    			<% else %>
    				<p><%= image_tag 'noimage.png', :width => '50', :height => '50' %></p>
				<% end %>
				<br>
				<br>
				<br>
				<br>

					<%= @book.user.name %>
				</span>
			<% end %>

			</td>
				<td><%= link_to @book.title, book_path(@book.id) %></td>
				<td><span><%= @book.body %></span></td>
				<% if current_user.id == @book.user_id %>
					<td><span><%= link_to 'Edit' , "/books/#{@book.id}/edit" %></span></td>
					<td><span><%= link_to 'destory', "/books/#{@book.id}", method: :delete, "data-confirm" => "Are You Sure" %></span></td>
				<% end %>
				</tr>
			</table>
		</div>
	</div>
</div>
