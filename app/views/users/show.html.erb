<!-- ログイン時のHome -->

<div class="container"> <!-- ここを追加 -->
	<div class="row">   <!-- ここを追加 -->
		<div class="col-lg-4">
			<%= render 'users/author', user: @user %>

			<%= render 'users/sauthor', book: @book %>
		</div>
		<div class="col-lg-8">
			<h1>Books</h1>
			<table class="table table-striped">
				<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
				</tr>
				<% @books.each do |book| %>
					<tr>
					<td><span>
						<% if @user.profile_image %>
    						<%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-circle pull-left profile-img" %>
    					<% else %>
    						<p><%= image_tag 'noimage.png', :width => '50', :height => '50' %></p>
						<% end %>
					</span></td>
					<td><%=link_to book.title , "/books/#{book.id}" %></td>
					<td><span><%= book.body %></span></td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>



