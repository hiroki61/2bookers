<h1>User info</h1>

<div class="profile-container">
    <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-circle pull-left profile-img",fallback: "noimage.png" %>
    <% if @user.id == current_user.id %>
        <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
    <% end %>
	name   <%= @user.name %>
    intro   <%= @user.intro %>


</div>