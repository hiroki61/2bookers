<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="container">
      <header class="navbar navbar-fixed-top navbar-inverse">
        <div class="container">
          <nav class="nav navbar-nav navbar-left">
            <span class="glyphicon glyphicon-book">Bookers</span>
          </nav>
          <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li class="">
              <span class="glyphicon glyphicon-new-window" aria-hidden="true"><%= link_to "Logout", destroy_user_session_path, method: :delete %></span>
              </li>
              <li class="">
              <span class="glyphicon glyphicon-pushpin" aria-hidden="true"><%= link_to "Home", new_user_session_path %></span>
              </li>
              <li class="">
              <span class="glyphicon glyphicon-user" aria-hidden="true"><%= link_to "Users", users_path %></span>
              </li>
              <li class="">
              <span class="glyphicon glyphicon-book" aria-hidden="true"><%= link_to "Books", books_path %></span>
              </li>
              <% else %>
              <li class="">
              <span class="glyphicon glyphicon-cloud-upload" aria-hidden="true"><%= link_to "Signup", new_user_registration_path %></span>
              </li>
              <li class="">
              <span class="glyphicon glyphicon-log-in" aria-hidden="true"><%= link_to "Login", new_user_session_path %></span>
              </li>
              <li class="">
              <span class="glyphicon glyphicon-send" aria-hidden="true"><%= link_to "About", about_path %></span>
              </li>
              <li class="">
              <span class="glyphicon glyphicon-pushpin" aria-hidden="true"><%= link_to "Home", root_path %></span>
              </li>
            <% end %>
          </ul>
          </nav>
        </div>
      </header>
    </div>
    <%= yield %>
  </body>
  <footer>
　<div class="footer">© All rights recerved by Infratop.Inc.</div>
  </footer>
</html>
